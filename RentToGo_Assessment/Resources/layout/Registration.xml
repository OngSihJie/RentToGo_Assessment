<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create An Account"
             android:textAlignment="center"
             android:id="@+id/textView2"/>
        
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Name: "
            android:paddingLeft="7dip"
            android:id="@+id/name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createcustname"/> 
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Username: "
            android:paddingLeft="7dip"
            android:id="@+id/createusrname"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createcustusername"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Phone Number: "
            android:paddingLeft="7dip"
            android:id="@+id/phnnumber"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createcustphn"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Address: "
            android:paddingLeft="7dip"
            android:id="@+id/address"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createcustaddress"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Password:"
            android:paddingLeft="7dip"
            android:id="@+id/usrpswrd"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createcustpassword"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register!!!"
        android:id="@+id/btnrgstration"/>



</LinearLayout>
